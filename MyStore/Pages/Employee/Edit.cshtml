@page
@model MyStore.Pages.Employee.EditModel
@{
}

<br />
<h2>Edit Client</h2>

@if (Model.errorMessage.Length > 0)
{
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<strong>@Model.errorMessage</strong>
			<button type="button" class="btn-close"></button>
		</div>
}

<form method="post">
	<input type="hidden" name="id" value="@Model.employeeInfo.id"/>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.employeeInfo.name" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Email</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="email" value="@Model.employeeInfo.email" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Phone</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="phone" value="@Model.employeeInfo.phone" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Address</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="address" value="@Model.employeeInfo.address" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Salary</label>
		<div class="col-sm-6">
			<input type="number" class="form-control" name="salary" value="@Model.employeeInfo.salary" />
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
		<div class="row-mb-3">
			<div class="col-sm-9">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.successMessage</strong>
					<button type="button" class="btn-close"></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" asp-page="/Employee/Index" role="button">Cancel</a>
		</div>
	</div>
</form>